@{
    ViewData["Title"] = "Functastic";
}

<script>
    $(document).ready(function() {
    console.log('aaa');
        //get button by ID
        $('#submitTextButton').on('click', function() {
            var data = {
                Data: [{
                    Input: [1,2,3],
                    Output: [4,5,6]
                }]
            };
            console.log(data);
            //call a function with parameters
            $.ajax({
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                url: 'Home/startMutating',  //(rec)= Controller's-name
                type: 'POST',
                timeout: '12000',// (optional 12 seconds)
                datatype: 'json',
                data: JSON.stringify(data)
            });
        });
    });
</script>
<div>
    <h1>Functastic</h1>
</div>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>

    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/ChooseFile44.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <input class="form-control" type="file" accept=".txt, .json">

                    <a class="btn btn-default" href="Result.cshtml">
                        Run
                    </a>
                    <a class="btn btn-default" asp-area="" asp-controller="Home" asp-action="Result">Run</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/EnterData.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <input id="freeText" name="freeText" class="form-control" />
                    <button type="button" class="btn btn-default btn-sm" id="submitTextButton">
                        Edit
                    </button>
                </p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>