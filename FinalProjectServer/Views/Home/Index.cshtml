@{
    ViewData["Title"] = "Functastic";
}

<script>
    $(document).ready(function () {

        $('.loading').hide();

        //get button by ID
        $('#submitTextButton').on('click', function (event) {
            $('.loading').show();
            //event.preventDefault();
            //call a function with parameters
            $.ajax({
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                url: 'Home/StartMutatingFreeText',
                type: 'POST',
                datatype: 'json',
                data: JSON.stringify({
                    'VariableNames': '',
                    'Points': $('#freeInput').val()
                }),
                success: function(data, textStatus, jqXHR) {
                    generatedFunction = data;
                    window.location.replace(window.location.href + "Home/Result?func=" + data);
            }
        });
           
            $('#submitFileButton').on('click', function () {
                $('.loading').show();
            });
        });
    });
</script>
<div margin: auto;>
    <h1>Functastic</h1>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/ChooseFile44.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <input class="form-control" type="file" accept=".txt, .json">
                    <a id="submitFileButton" class="btn btn-default" href="">
                        Run
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/EnterData.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <textarea cols="5" id="freeInput" class="form-control"></textarea>
                <button type="button" class="btn btn-default btn-sm" id="submitTextButton">
                    Run
                </button>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

